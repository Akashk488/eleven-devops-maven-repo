pipeline {
    agent {label 'jenkins_slave'}
    tools {
        maven 'maven_test'
    }
    stages{
        stage ('checkout_scm'){
            steps{
                sh 'checkout scm'
            }
        }
        stage ('maven_build'){
            steps {
                sh 'mvn clean package'
            }
        }
        stage ('deploy'){
            steps {
                sshagent (['tomcat_server'])
                sh 'scp -o StrictHostKeyCheckinh=no target/maven-web-application.war ec2-user@3.110.186.168:/opt/tomcat9/webapps'
            }
        }
    }
}
