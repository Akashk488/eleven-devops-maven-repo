pipeline{
    agent {label 'jenkins_slave'}
    tools {
        maven 'maven_test'
    }

    stages {
        stage ('checkout_scm'){

            steps {

                checkout scm
            }
        }

        stage ('maven_build'){

            steps {

                sh 'mvn package'
            }
        }

        stage ('tomcat_deploy'){

            steps{
                sshagent (['tomcat_server']){

                    sh 'scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@65.2.31.105:/opt/tomcat9/webapps'
                }
            }
        }
    }
}
