pipleline {
    agent {label 'jenkins_server'}
    tools {
        maven 'maven_test'
    }
    stages{
        stage ('checkout_scm') {
            steps {
                checkout scm
            }
        }
        stage ('buils_maven'){
            steps {
                sh 'mvn clean package'
            }
        }
        stage ('tomcat_deploy'){
            steps{
                sshagent(['tomcat_server']){
                    sh 'scp -o StrictHostKeyChecking=no taget/maven-web-application.war ec2-user@3.110.186.168:/opt/tomcat9/webapps'
                }
            }
        }
    }
}
